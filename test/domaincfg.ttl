prefix : <urn:ogc:na/domaincfg#>
prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>

# Rule collections

_:skosRules a :RuleCollection ;
  :hasFile 'scripts/skosbasics.shapes.ttl',
           'scripts/ogc_skos_profile_entailments.ttl',
           'scripts/skos_vocprez.shapes.ttl' ;
.

_:skosValidator a :RuleCollection ;
  :hasFile 'scripts/vocprez.shapes.ttl' ;
.

_:owlRules a :RuleCollection ;
  :imports _:skosRules ;
  :hasFile 'scripts/owl2skos.shapes.ttl',
           'scripts/owl2feature.shapes.ttl' ;
.

_:specRules a :RuleCollection ;
  :imports _:skosRules ;
  :hasFile 'scripts/spec_as_conceptscheme.shapes.ttl' ;
.

_:profileRules a :RuleCollection ;
  :imports _:skosRules ;
  :hasFile 'scripts/prof_as_skos.shapes.ttl' ;
.

_:docRules a :RuleCollection ;
  :imports _:skosRules ;
  :hasFile 'scripts/docs_entailments.shapes.ttl' ;
.

_:specValidator a :RuleCollection ;
  :hasFile 'definitions/models/modspec-owl2sh-semi-closed.ttl' ;
  :imports _:skosValidator ;
.

_:specModelClosure a :RuleCollection ;
  :hasFile 'definitions/models/modspec_validations.ttl',
           'definitions/conceptschemes/status.ttl' ;
.

_:profModelClosure a :RuleCollection ;
  :hasFile 'definitions/conceptschemes/profiles.ttl',
           'definitions/models/prof.ttl' ;
.

_:appSchemaClosure a :RuleCollection ;
  :hasFile 'definitions/models/featuretypes.ttl' ;
.

_:testValidator a :RuleCollection ;
  :hasFile 'scripts/test/test_validator.ttl' ;
.

# Domain configurations

_:definitionsConceptSchemes a :DomainConfiguration ;
  :path "definitions/conceptschemes" ;
  rdfs:comment "Set of terms registered with OGC NA not covered by specialised domains" ;
  :glob "*.ttl" ;
  :rules _:skosRules ;
  :validator _:skosValidator ;
  :uriRootFilter '/def/' ;
.

_:specificationElementsDefs a :DomainConfiguration ;
  :path "specification-elements/defs" ;
  rdfs:comment 'Specification Elements defined according the OGC modular specification and relevant policies' ;
  :glob "*.ttl" ;
  :rules _:specRules ;
  :validator _:specValidator ;
  :extraOntology [
    :hasFile 'definitions/models/modspec_validations.ttl',
             'definitions/conceptschemes/status.ttl',
             'definitions/models/doc_relations_model.ttl' ;
  ] ;
  :annotation [
    :hasFile 'definitions/models/modspec.ttl',
             'definitions/models/policy.ttl' ,
             'definitions/models/doc_relations_model.ttl' ;
  ] ;
  :uriRootFilter '/spec/' ;
.



