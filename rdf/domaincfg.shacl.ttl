@prefix : <urn:ogc:na/domaincfg#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

_:nodeShapeDomainConfiguration a sh:NodeShape ;
  sh:targetClass :DomainConfiguration ;
  sh:property [
    sh:path :path ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:datatype xsd:string ;
  ] ;
  sh:property [
    sh:path :glob ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:datatype xsd:string ;
  ] ;
  sh:property [
    sh:path :uriRootFilter ;
    sh:maxCount 1 ;
    sh:datatype xsd:string ;
  ] ;
  sh:or (
    [
      sh:path :rules ;
      sh:minCount 1 ;
    ]
    [
    sh:path :validator ;
    sh:minCount 1 ;
    ]
  ) ;
.

_:nodeShapeRuleCollection a sh:NodeShape ;
  sh:targetClass :RuleCollection ;
  sh:or (
    [
      sh:path :hasFile ;
      sh:minCount 1 ;
    ]
    [
      sh:path :imports ;
      sh:minCount 1 ;
    ]
  ) ;
  sh:property [
    sh:path :imports ;
    sh:nodeKind sh:BlankNodeOrIRI ;
  ] ;
  sh:property [
    sh:path :hasFile ;
    sh:datatype xsd:string ;
  ] ;
.

